<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        >
        <ImageButton
            android:id="@+id/btnBackMenuPr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/header_menu"/>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:src="@drawable/profile_bg"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:id="@+id/imvMail"
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/icon_mail_white"
                android:layout_alignTop="@+id/imvAvatar"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="31dp"
                android:layout_marginEnd="31dp" />

            <ImageView
                android:id="@+id/imvAvatar"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/image_2"
                android:layout_marginTop="190dp"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:id="@+id/imvPhone"
                android:layout_width="55dp"
                android:layout_height="42dp"
                android:background="#00ffffff"
                app:srcCompat="@drawable/icon_phone_white"
                android:layout_marginRight="42dp"
                android:layout_marginEnd="42dp"
                android:layout_alignTop="@+id/imvAvatar"
                android:layout_toLeftOf="@+id/imvAvatar"
                android:layout_toStartOf="@+id/imvAvatar" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:text="Antonie Riollet"
                android:layout_below="@+id/imvAvatar"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                android:text="Welcome to my profile"
                android:layout_below="@+id/tvName"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
    </ScrollView>
</LinearLayout>